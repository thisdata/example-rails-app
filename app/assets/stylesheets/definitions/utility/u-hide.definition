// Hide Utility
// ============================================================

.u-hide {
  display: none !important;
}
.u-hide-m {
  @media @mobile {
    display: none !important;
  }
}
.u-hide-t {
  @media @tablet {
    display: none !important;
  }
}
.u-hide-d {
  @media @desktop {
    display: none !important;
  }
}

// Load Theme Overrides
// ============================================================

@import "themes/@{themes-folder}/utility/u-hide.overrides";