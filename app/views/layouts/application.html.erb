<!DOCTYPE html>
<html>
<head>
  <title>Apitester</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<section class="banner">
  <% if flash[:notice] %>
    <div class="notice">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% if flash[:error] %>
    <div class="warning">
      <%= flash[:error] %>
    </div>
  <% end %>
</section>

<%= yield %>

</body>
</html>
